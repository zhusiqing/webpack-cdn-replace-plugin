{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationDir": "lib",
  },
  "include": ["src/**/*.ts", "src/*.d.ts"]
}
